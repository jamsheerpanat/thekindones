generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          String    @default("USER")
  phone         String?
  address       String?
  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Category {
  id        String     @id @default(cuid())
  name      String     @unique
  slug      String     @unique
  items     MenuItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model MenuItem {
  id          String    @id @default(cuid())
  name        String
  slug        String    @unique
  description String
  image       String?
  price       Decimal
  active      Boolean   @default(true)
  featured    Boolean   @default(false)
  categoryId  String
  category    Category  @relation(fields: [categoryId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id                  String       @id @default(cuid())
  userId              String?
  user                User?        @relation(fields: [userId], references: [id])
  status              String       @default("PENDING")
  total               Decimal
  currency            String       @default("KWD")
  deliveryFee         Decimal      @default(0)
  deliveryGovernorate String?
  items               OrderItem[]
  createdAt           DateTime     @default(now())
  updatedAt           DateTime     @updatedAt
}

model Governorate {
  id          String   @id @default(cuid())
  name        String   @unique
  deliveryFee Decimal  @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OrderItem {
  id         String   @id @default(cuid())
  orderId    String
  menuItemId String
  name       String
  price      Decimal
  quantity   Int
  modifiers  String?

  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItem MenuItem @relation(fields: [menuItemId], references: [id])
}

model Promo {
  id          String        @id @default(cuid())
  code        String        @unique
  description String?
  discount    String        @default("PERCENT")
  amount      Decimal
  active      Boolean       @default(true)
  startsAt    DateTime?
  endsAt      DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model HeroSettings {
  id          String   @id @default("hero-main")
  title       String   @default("Order in minutes")
  subtitle    String   @default("Pick a category, customize, and checkout in a few taps.")
  image       String?
  promoText   String?  @default("Promo: Free delivery on first order")
  primaryBtn  String   @default("Start shopping")
  primaryUrl  String   @default("/menu")
  secondaryBtn String  @default("Book a table")
  secondaryUrl String  @default("/reservations")
  updatedAt   DateTime @updatedAt
}
